<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <Button
        android:id="@+id/btn_baslat_cift_telsiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="126dp"
        android:text="@string/stop_listening" />

    <SeekBar
        android:id="@+id/seekBar_treshhold"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_baslat_cift_telsiz"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="65dp"
         />

    <ProgressBar
        android:id="@+id/noiseBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/seekBar_treshhold"
        android:layout_marginBottom="49dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBar_treshhold"
        android:layout_centerHorizontal="true"
        android:text="@string/treshold_header" />

    <TextView
        android:id="@+id/txt_trashold_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/seekBar_treshhold"
        android:text="100"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>
